= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :background
    = f.text_area :background
  .field
    = f.label :accomplishment
    = f.text_area :accomplishments
  .field
    = f.label :professional_summar
    = f.text_area :professional_summary
  - if current_user.role == "mentor"
    .field
      = f.label :company
      = f.text_area :company
    .field
      = f.label :position
      = f.text_area :position
    .field
      = f.label :available
      = f.check_box :available
  - else
    .field
      = f.label :graduating_class
      = f.text_area :graduating_class
    .field
      = f.label :course
      = f.text_area :course
  .field
    = f.label :admin
    = f.check_box :admin
  .actions
    = f.submit
